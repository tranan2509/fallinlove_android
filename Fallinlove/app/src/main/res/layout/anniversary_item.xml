<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rounded_gray"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:layout_marginBottom="16dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingRight="28dp"
            android:textColor="@color/black"
            android:background="@color/background_primary"
            android:fontFamily="serif"
            android:text="Ngày được bên nhau"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txtViewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtViewName"
            android:background="@color/background_primary"
            android:text="15:08 23/06/2021"
            android:fontFamily="serif"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtViewDate"
            android:background="@color/background_primary"
            android:text="Thật tuyệt vời khi chúng tôi mãi như vậy!"
            android:paddingTop="8dp"
            android:paddingBottom="6dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="serif"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/txtViewDescription"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/imgAnniversary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_in_love"/>

        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/btnOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/txtViewName"
            android:src="@drawable/ic_baseline_more_horiz_24"
            android:background="#00ffffff"/>
    </RelativeLayout>

</LinearLayout>