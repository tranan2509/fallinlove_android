<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rounded_white_normal"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingRight="24dp"
    android:paddingLeft="24dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingRight="28dp"
                android:textColor="@color/black"
                android:fontFamily="serif"
                android:text="Ngày được bên nhau"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtViewDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtViewTitle"
                android:text="15:08 23/06/2021"
                android:fontFamily="serif"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txtViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtViewDate"
                android:text="Thật tuyệt vời khi chúng tôi mãi như vậy!"
                android:paddingTop="8dp"
                android:paddingBottom="6dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="serif"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_below="@id/txtViewDescription"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/imgAnniversary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_in_love"/>

            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/btnOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/txtViewTitle"
                android:src="@drawable/ic_baseline_more_horiz_24"
                android:background="@color/white"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>